  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger:Invoke All",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/invoke_all.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--state-machine-arn",
        "${input:stateMachineArn}",
        "--orchestrator-arn",
        "${input:orchestratorArn}",
        "--region",
        "${input:region}",
        "--stack-name",
        "${input:stackName}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "stateMachineArn",
      "type": "promptString",
      "description": "Enter State Machine ARN (leave empty to skip)",
      "default": ""
    },
    {
      "id": "orchestratorArn",
      "type": "promptString",
      "description": "Enter Orchestrator ARN (leave empty to skip)",
      "default": ""
    },
    {
      "id": "region",
      "type": "promptString",
      "description": "Enter AWS Region",
      "default": "eu-central-1"
    },
    {
      "id": "stackName", 
      "type": "promptString",
      "description": "Enter CDK Stack Name",
      "default": "OrchestrationStack"
    }
  ]
}